@model BusTicket.Models.ViewModels.BusSearchViewModel 
@{
    ViewData["Title"] = "Bus Search";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="BusSearch" asp-action="Index" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Origin" class="control-label"></label>
                <input asp-for="Origin" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Destination" class="control-label"></label>
                <input asp-for="Destination" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="DepartureDate" class="control-label"></label>
                <input asp-for="DepartureDate" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search Buses" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Clear Search</a> @* Optional: Link to clear form *@
            </div>
        </form>
    </div>
</div>

<hr />

<h2>Search Results</h2>

@if (Model.Schedules != null && Model.Schedules.Any())
{
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Origin</th>
            <th>Destination</th>
            <th>Departure</th>
            <th>Arrival</th>
            <th>Price</th>
            <th>Available Seats</th>
            <th></th> @* For actions like 'Book' *@
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Schedules)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Route.Origin)</td>
                <td>@Html.DisplayFor(modelItem => item.Route.Destination)</td>
                <td>@Html.DisplayFor(modelItem => item.DepartureTime)</td>
                <td>@Html.DisplayFor(modelItem => item.ArrivalTime)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.AvailableSeats)</td>
                <td>
                    @* Add links for details or booking if needed *@
                    @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                           <a asp-action="Book" asp-route-id="@item.Id">Book Now</a> *@
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else if (Context.Request.Query.Any()) // Check if a search was attempted
{
    <p>No bus schedules found matching your criteria.</p>
}
else
{
    <p>Enter search criteria above to find bus schedules.</p>
}

@* Include client-side validation scripts if needed *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}