@model BusTicket.Models.Entities.Otobus

@{ ViewData["Title"] = "Otobüs Düzenle"; }

<h1>@ViewData["Title"]</h1>

<h4>Otobüs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* ID'yi form içinde gizli olarak göndermemiz gerekiyor *@
            <input type="hidden" asp-for="OtobusID" />
            <div class="mb-3">
                <label asp-for="Plaka" class="form-label"></label>
                <input asp-for="Plaka" class="form-control" />
                <span asp-validation-for="Plaka" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="KoltukKapasitesi" class="form-label"></label>
                <input asp-for="KoltukKapasitesi" class="form-control" type="number"/>
                <span asp-validation-for="KoltukKapasitesi" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}