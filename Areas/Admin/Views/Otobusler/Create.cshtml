@model BusTicket.Models.Entities.Otobus

@{ ViewData["Title"] = "Yeni Otobüs Ekle"; }

<h1>@ViewData["Title"]</h1>

<h4>Otobüs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @* Validation hatalarını toplu göstermek için *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Plaka" class="form-label"></label>
                <input asp-for="Plaka" class="form-control" />
                @* Plaka alanı için validation hatası *@
                <span asp-validation-for="Plaka" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="KoltukKapasitesi" class="form-label"></label>
                <input asp-for="KoltukKapasitesi" class="form-control" type="number" />
                @* KoltukKapasitesi alanı için validation hatası *@
                <span asp-validation-for="KoltukKapasitesi" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@* İstemci tarafı validation scriptlerini etkinleştirmek için *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}