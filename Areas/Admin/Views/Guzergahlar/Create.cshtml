@model BusTicket.Models.Entities.Guzergah

@{
    ViewData["Title"] = "Yeni Güzergah Oluştur";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; // Admin Layout'unu kullan
}

<h1>@ViewData["Title"]</h1>

<h4>Güzergah Bilgileri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> @* Genel hatalar için *@
            <div asp-validation-summary="All" class="text-danger"></div> @* Tüm hataları göster *@

            <div class="mb-3">
                <label asp-for="KalkisSehri" class="form-label"></label>
                <input asp-for="KalkisSehri" class="form-control" />
                <span asp-validation-for="KalkisSehri" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="VarisSehri" class="form-label"></label>
                <input asp-for="VarisSehri" class="form-control" />
                <span asp-validation-for="VarisSehri" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}